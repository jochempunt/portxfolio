---
interface Props {
  href: string;
  label: string;
  special?: boolean;
}

const { href, label, special = false } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  title={label}
  class={`github-link ${special ? "orange": ""}`}
>
  <span>{label}</span>
  <svg
    class="arrow-icon"
    viewBox="0 0 16 16"
    fill="currentColor"
    aria-hidden="true"
  >
    <path
      fill-rule="evenodd"
      d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"
    ></path>
    <path
      fill-rule="evenodd"
      d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"
    ></path>
  </svg>
</a>

<style>
  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: #2b2b2b;
    border: 1px solid #3a3a3a;
    border-radius: 8px;
    color: #e8e8e8;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition:
      background 0.2s ease,
      border-color 0.2s ease;

  }

  .github-link:hover {
    background: #333;
    border-color: #4a4a4a;
  }

  .github-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .arrow-icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    opacity: 0.6;
  }


  .orange{
    background-color: #ff835a;
  }

   .orange:hover{
    background-color: #f09475;
  }


  .github-link:hover .arrow-icon {
    opacity: 1;
  }
</style>
