---
const { pathname } = Astro.url;
const isProjects = pathname === "/" || pathname.startsWith("/projects");
const isAboutme = pathname.startsWith("/about-me");
---

<header >
  <a href="/" class="site-name" aria-label="Jochem Punt - Home">
    Jochem Punt
  </a>
  <nav>
    <a
      href="/"
      aria-current={isProjects ? "page" : undefined}
      
    >
      Projects
    </a>
    <a
      href="/about-me"
      aria-current={isAboutme ? "page" : undefined}
    >
      About me
    </a>
  </nav>
</header>

<style>
  nav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 20px;
    align-items: center;
    flex-wrap: nowrap;
    padding: 0.8rem;
  }

  

  nav > a {
    border-radius: 20px;
    padding: 0.3rem 0.6rem;
     background-color: transparent;
  }

  nav a[aria-current="page"] {
    color: var(--background-color); 
    background-color: var(--accent-color);
  }

  .site-name {
    font-weight: 800;
    font-size: 1.5rem;
    color: var(--accent-color);
  }

  .site-name:hover {
    text-decoration: none;
  }

  header {
    text-align: center;
    display: flex;
    flex-direction: row;
    gap: 20px;
    background-color: rgba(47, 47, 47, 0.9);
    padding: 0.8rem;
 
    top: 0;
    z-index: 1000;
    align-items: center;
  }

  a:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }

  nav a {
    font-weight: 600;
    color: white;
  }

  @media (max-width: 400px) {
    .site-name {
      font-size: medium;
    }

    a {
      font-size: small;
    }
   
  }
</style>
