---
const { pathname } = Astro.url;
const isProjects = pathname === "/" || pathname.startsWith("/projects");
const isAboutme = pathname.startsWith("/about-me");
---

<header>
  <a href="/" class="site-name" aria-label="Jochem Punt - Home"tabindex="-1">
    Jochem Punt
  </a>
  <nav>
    <a
      href="/"
      aria-current={isProjects ? "page" : undefined}
      class={isProjects ? "active" : undefined}
      
    >
      Projects
    </a>
    <a
      href="/about-me"
      aria-current={isAboutme ? "page" : undefined}
      class={isAboutme ? "active" : undefined}
    >
      About me
    </a>
  </nav>
</header>

<style>
  nav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 20px;
    align-items: center;
    flex-wrap: nowrap;
    padding: 0.8;
  }

  .active {
    color: var(--secondary-color);
    background-color: var(--accent-color);
    box-shadow: 0 1px 2px #1b1b1bd4;
  }

  nav > a {
    border-radius: 20px;
    padding: 0.3rem 0.6rem;
  }

  .site-name {
    font-weight: 800;
    font-size: 1.5rem;

    color: var(--background-variant);
    &:hover {
      text-decoration: none;
    }
  }
  #punt {
    display: inline;
  }

  header {
    text-align: center;
    display: flex;
    flex-direction: row;
    gap: 20px;
    padding: 10px;
    background-color: rgba(47, 47, 47, 0.9);
    padding: 0.8rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    align-items: center;
  }

  h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  a:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }

  @media (max-width: 400px) {
    .site-name {
      font-size: medium;
    }

    a {
      font-size: small;
    }
    header {
      gap: 20px;
    }
  }
</style>
