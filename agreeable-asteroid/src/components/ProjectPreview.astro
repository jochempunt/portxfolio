---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  slug: string;
  description: string;
  img: ImageMetadata;
  tags: string[];
  github?: string;
}



const { title, slug, description, img, tags, github } = Astro.props;
const projectUrl = `projects/${slug}`;
---

<article class="project-item">
  <a
    href={projectUrl}
    class="project-thumbnail"
    aria-label={`View ${title}`}
    tabindex="-1"
    title={`view more about ${title}`}
  >
   <Image
      src={img}
      alt={`Screenshot of ${title}`}
      class="thumbnail-img"
      width={800}
      height={600}
      loading={"eager"}
      decoding="async"
      format="webp"
    />
  </a>

  <div class="project-content">
    <a href={projectUrl} class="project-title-link" tabindex="-1" title={`view more about ${title}`}>
      <h2 class="project-title">{title}</h2>
    </a>

    <div class="project-tags">
      {tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>

    <p class="project-description">
      {description}
    </p>

    <div class="project-actions">
      <a href={projectUrl} class="view-more" title={`view more about ${title}`}>View project â†’</a>
      {
        github && (
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            title="View source on GitHub"
            class="github-icon-link"
          >
            <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
              <title id="github-icon-title">View source on GitHub</title>
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</article>

<style>
  .project-item {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    padding: 0.8rem 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 5px;
  }

  .thumbnail-img {
    width: 100%;
    height: auto;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    border-radius: 4px;
    display: block;
  }

 .project-thumbnail {
  width: 200px;
  aspect-ratio: 4/3;
  display: block;
  transition: opacity 0.2s;
}

.project-thumbnail:hover .thumbnail-img {
  opacity: 0.8;
}


  .project-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-height: 0;
  }

  .project-title-link {
    text-decoration: none;
    color: inherit;
    width: fit-content;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    color: white;
    transition: color 0.2s;
  }

  .project-title-link:hover .project-title,
  .project-title-link:focus-visible .project-title {
    text-decoration: underline;
    color: rgb(195, 195, 195);
  }

  .project-title-link:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
    user-select: none;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.25rem 0.65rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-right: 1rem;
    margin: 0;
    max-width: 800px;
  }

  .project-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }

  .view-more {
    color: var(--view-color);
    font-weight: 500;
    font-size: 0.9rem;
    text-decoration: none;
  }

  .view-more:hover {
    text-decoration: underline;
  }

  .github-icon-link {
    display: inline-flex;
    align-items: center;
    color: var(--text-secondary);
    opacity: 0.5;
    transition: opacity 0.2s;
    margin-left: 0.2rem;
  }

  .github-icon-link:hover {
    opacity: 1;
  }

  .github-icon-link svg {
    width: 18px;
    height: 18px;
  }

  @media (max-width: 768px) {
    .project-item {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .project-thumbnail {
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 12;
    }

    .project-description {
      -webkit-line-clamp: 4;
      padding-right: 0;
    }
  }
</style>
