---
interface Props {
  title: string;
  slug: string;
  description: string;
  img: string;
  tags: string[];
}

const { title, slug, description, img, tags } = Astro.props;
---

<article class="project-item">
  <a
    title={`read more about ${title}`}
    href={`projects/${slug}`}
    class="project-link"
  >
    <div class="project-thumbnail"></div>
    <div class="project-content">
      <h3 class="project-title">{title}</h3>
      <div class="project-tags">
        {tags.map((tag) => <span class="tag">{tag}</span>)}
      </div>
      <p class="project-description">
        {description}
      </p>
      <span class="view-more" aria-hidden="true">View project â†’</span>
    </div>
  </a>
</article>

<style>
  .project-item {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 5px;
  }

  .project-link {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    padding: 0.8rem 0.5rem;
    text-decoration: none;
    color: inherit;
    border-radius: 5px;
    transition: background-color 0.2s;
  }
  h3 {
    transition: ease-in color 0.2s;
  }

  .project-link:focus-visible > .project-content > h3,
  .project-link:hover > .project-content > h3 {
    text-decoration: underline;
    color: rgb(195, 195, 195);
  }

  .project-link:hover,
  .project-link:focus-visible {
    background-color: var(--background-color-light);
    outline: none;
  }

  .project-link:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }

  .project-thumbnail {
    width: 200px;
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, #3a3a3a 0%, #2a2a2a 100%);
    border-radius: 4px;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-height: 0;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    color: white;
  }

  .project-tags{
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }
  .tag {
    font-size: 0.8rem;
    padding: 0.25rem 0.65rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: var(--text-secondary);
    font-weight: 500;
  }
  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-right: 1rem;
    margin-top: 0;
    margin-bottom: 0;
    max-width: 800px;
  }

  .view-more {
    color: var(--view-color);
    font-weight: 500;
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  .view-more:hover{
    text-decoration: underline;
  }



  @media (max-width: 768px) {
    .projects-list {
      padding: 1rem;
    }

    .project-link {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .project-thumbnail {
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 10;
    }

    .project-description {
      -webkit-line-clamp: 4;
      padding-right: 0;
    }
  }
</style>
