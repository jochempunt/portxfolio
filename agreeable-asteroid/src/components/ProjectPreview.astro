---
import type { ImageMetadata } from 'astro';
import GithubIcon from '../assets/githubicon.svg?raw';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  slug: string;
  description: string;
  img: ImageMetadata;
  tags: string[];
  github?: string;
}



const { title, slug, description, img, tags, github } = Astro.props;
const projectUrl = `projects/${slug}`;
---

<article class="project-item">
  <a
    href={projectUrl}
    class="project-thumbnail"
    aria-label={`View ${title}`}
    tabindex="-1"
    title={`view more about ${title}`}
  >
   <Image
      src={img}
      alt={`Screenshot of ${title}`}
      class="thumbnail-img"
      width={800}
      height={600}
      loading={"eager"}
      decoding="async"
      format="webp"
    />
  </a>
  <div class="project-thumbnail">
    <Image
        src={img}
        alt={`Screenshot of ${title}`}
        class="thumbnail-img"
        width={800}
        height={600}
        loading={"eager"}
        decoding="async"
        format="webp"
      />
  </div>

  <div class="project-content">
    <a href={projectUrl} class="project-title-link" tabindex="-1" title={`view more about ${title}`}>
    <a href={projectUrl} class="stretched-link">
      <h2 class="project-title">{title}</h2>
    </a>

    <div class="project-tags">
      {tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>

    <p class="project-description">
      {description}
    </p>

    <div class="project-actions">
      <a href={projectUrl} class="view-more" title={`view more about ${title}`}>View project →</a>
      <span class="view-more">View project →</span>

      {
        github && (
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            title="View source on GitHub"
            class="github-icon-link"
          >
            <Fragment set:html={GithubIcon} />
          </a>
        )
      }
    </div>
  </div>
</article>

<style>
  .project-item {
    position: relative; /* Needed for the pseudo-element link */
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    padding: 0.8rem 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 5px;
    transition: background-color 0.2s ease-in-out;
  }

  .project-item:hover {
    background-color: rgba(var(--accent-color-rgb), 0.05);
  }

  .stretched-link::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .thumbnail-img {
    width: 100%;
    height: auto;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    border-radius: 4px;
    display: block;
  }
  
  .project-thumbnail {
    width: 200px;
    aspect-ratio: 4/3;
    display: block;
  }

 .project-thumbnail {
  width: 200px;
  aspect-ratio: 4/3;
  display: block;
  transition: opacity 0.2s;
}

.project-thumbnail:hover .thumbnail-img {
  opacity: 0.8;
}


  .project-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-height: 0;
  }

  .project-title-link {
  .stretched-link {
    text-decoration: none;
    color: inherit;
    width: fit-content;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    color: white;
    transition: color 0.2s;
    color: var(--text-color-light);
  }

  .project-title-link:hover .project-title,
  .project-title-link:focus-visible .project-title {
  .project-item:hover .project-title {
    text-decoration: underline;
    color: rgb(195, 195, 195);
  }

  .project-title-link:focus-visible {
  .stretched-link:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
    user-select: none;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.25rem 0.65rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 999px; 
    color: var(--text-color);
    font-weight: 500;
  }

  .project-description {
    color: var(--text-color);
    line-height: 1.6;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-right: 1rem;
    margin: 0;
    max-width: 800px;
  }

  .project-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }

  .view-more {
    color: var(--accent-color);
    font-weight: 500;
    font-size: 0.9rem;
    text-decoration: none;
  }

  .view-more:hover {
  .project-item:hover .view-more {
    text-decoration: underline;
  }

  .github-icon-link {
    position: relative; /* Ensure it's clickable on top of the card link */
    z-index: 2;
    display: inline-flex;
    align-items: center;
    color: var(--text-color);
    opacity: 0.5;
    transition: opacity 0.2s;
    margin-left: 0.2rem;
  }

  .github-icon-link:hover {
    opacity: 1;
  }

  .github-icon-link :global(svg) {
    width: 18px;
    height: 18px;
  }

  @media (max-width: 768px) {
    .project-item {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .project-thumbnail {
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 12;
    }

    .project-description {
      -webkit-line-clamp: 4;
      padding-right: 0;
    }
  }
</style>
