---
import BasicLayout from "../layouts/basicLayout.astro";
import ButtonLink from "../components/ButtonLink.astro";

const description =
  "Software Engineer passionate about interactive experiences. Learn more about my background, skills, and approach";
---

<BasicLayout title="About Me" id="about-me" description={description}>
  <section class="intro">
    <h1>About me</h1>
    <p class="lead">
      I'm <em>Jochem Punt</em>, a frontend developer specializing in building
      fast, accessible, and interactive web applications.
    </p>
  </section>

  <section class="skills">
    <p>
      I have hands-on experience with <strong>React</strong>, along with a solid
      foundation in <strong>HTML</strong>, <strong>CSS</strong>, and
      <strong>JavaScript/TypeScript</strong>. I enjoy building interactive
      applications and have knowledge in <strong>C#</strong>, particularly
      within the <strong>.NET framework</strong> and <strong>Unity</strong>.
    </p>
  </section>

  <section class="status">
    <div class="status-card">
      <span class="status-indicator"></span>
      <p>
        Currently working as a <strong>Software Engineer</strong> at
        <strong>Pie Medical Imaging</strong> in Maastricht.
      </p>
    </div>
  </section>

  <section class="connect">
    <h2>Connect with me:</h2>
    <div class="button-group">
      <ButtonLink
        href="https://www.linkedin.com/in/jochem-punt-5446b220a/"
        label="My LinkedIn"
        special="Blue"
      />
      <ButtonLink
        href="https://github.com/YOUR_GITHUB_USERNAME"
        label="My GitHub"
        special="Orange"
      />
    </div>
  </section>
</BasicLayout>

<style>
  section {
    margin-bottom: 1rem;
  }

  .intro {
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.25rem;
    line-height: 1.6;
    max-width: 800px;
  }

  .status p {
    font-size: 1.1rem;
    color: var(--accent-color);
    max-width: 800px;
  }

  .skills p {
    max-width: 800px;
    line-height: 1.8;
  }

  h2 {
    font-weight: 500;
    color: rgb(241, 241, 241);
    margin-bottom: 1rem;
  }

  em {
    font-weight: 800;
    color: var(--accent-color);
    font-style: normal;
    font-size: 1.8rem;
  }

  .button-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  strong,
  b {
    color: rgb(241, 241, 241);
    font-weight: 600;
  }

  .status {
    margin-bottom: 2.5rem;
  }

  .status-card {
    position: relative;
    max-width: 800px;
    padding: 1.5rem 1.5rem 1.5rem 3rem;
    background: rgba(255, 107, 53, 0.07);
    border: 2px solid var(--accent-color);
    border-radius: 12px;
  }

  .status-card {
    position: relative;
    max-width: 800px;
    padding: 1rem 1rem 1rem 2.5rem;
    background: rgba(255, 107, 53, 0.1);
    border: 2px solid rgba(255, 107, 53, 0.4); 
    border-radius: 8px;
  }

  .status-indicator {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 10px; 
    height: 10px;
    background: var(--accent-color);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .status-card p {
    font-size: 1rem; /* Reduced from 1.1rem */
    color: rgb(241, 241, 241);
    margin: 0;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .status-card strong {
    color: var(--accent-color);
  }
</style>
