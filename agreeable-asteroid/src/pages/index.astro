---
import BasicLayout from "../layouts/basicLayout.astro";
import ProjectPreview from "../components/ProjectPreview.astro";
import { getCollection } from "astro:content";
const description =
  "Showcasing projects in web development, game design, UI/UX, and research.";
const projects = await getCollection("projects");
---

<BasicLayout title="Projects" id="projects" description={description}>
  <section id="info">
    <h1>Projects</h1>
    <span class="tagline"
      >Interactive web applications, games, research projects and more</span
    >
  </section>
  <section class="projects-list">
    {
      projects
        .sort((a, b) => a.data.prio - b.data.prio)
        .map((proj) => (
          <ProjectPreview
            title={proj.data.title}
            slug={proj.id}
            description={proj.data.description}
            img={proj.data.img}
            tags={proj.data.tags}
            github={proj.data.github}
          />
        ))
    }
  </section>
</BasicLayout>
<style>
  .projects-list {
    max-width: 1300px;
    margin: 0 auto;
    padding-bottom: 3rem;
  }
  .tagline {
    font-weight: 500;
    color: var(--text-color-light);
    font-size: 1.1rem;
  }
  @media (max-width: 768px) {
    .projects-list {
      padding: 1rem;
    }

    #info {
      margin: 0 1rem;
    }
  }
</style>
